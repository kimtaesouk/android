<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoChange_Ac.BirthChange_Activity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:background="@null"
            android:layout_margin="15dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생일 변경"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp">

        <EditText
            android:id="@+id/et_birth"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:paddingEnd="40dp" />

        <ImageButton
            android:id="@+id/ib_clander_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@id/et_birth"
            android:layout_alignBottom="@id/et_birth"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:contentDescription="Clear text"
            android:src="@drawable/baseline_calendar_month_24"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_birth_change"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="저장"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:enabled="false"/>



</LinearLayout>