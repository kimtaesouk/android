<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".singup.Singup_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:background="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="회원가입"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="120dp"/>



    </LinearLayout>

    <!-- 회원가입 단계를 표시하는 LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <!-- 첫 번째 단계 (원 안에 숫자) -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_background2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <!-- 단계 구분선 (점선) -->
        <View
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:background="@drawable/dashed_divider"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />

        <!-- 두 번째 단계 (원 안에 숫자) -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/white" />
        </FrameLayout>

        <!-- 단계 구분선 (점선) -->
        <View
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:background="@drawable/dashed_divider"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" />

        <!-- 세 번째 단계 (원 안에 숫자) -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_background2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/white" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_pw_signup"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/board"
                android:inputType="textPassword"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_check_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="57dp"
            android:textSize="15sp"
            android:textColor="#FB0000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:textSize="15sp"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"/>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/et_pwcheck_signup"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="@drawable/board"
                android:inputType="textPassword"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="다음"
            android:enabled="false"/>
    </LinearLayout>


</LinearLayout>
