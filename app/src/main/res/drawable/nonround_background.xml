<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 투명한 배경 -->
    <solid android:color="#00000000" />

    <!-- 모서리 둥글지 않도록 설정 -->
    <corners android:radius="0dp" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="3dp"
        android:color="#FFFF00" />

    <!-- 테두리 안쪽으로 패딩 추가 -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />
</shape>
